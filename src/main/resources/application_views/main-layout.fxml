<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="rootPane" prefHeight="600" prefWidth="800" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="MusicPlayer.Controller.LayoutController">

    <!-- Barre latérale -->
    <left>
        <VBox id="sidebar" prefWidth="200" style="-fx-background-color: #111536;">
            <!-- Ajoutez vos éléments de la barre latérale ici -->
            <fx:include source="SideBar.fxml" />

        </VBox>
    </left>


    <!-- Zone principale de contenu -->
    <center>
        <VBox id="content" prefWidth="200" style="-fx-background-color: #fff;">
            <Button onAction="#changeContent" text="Change Content" />

            <!-- Ajoutez vos éléments de la barre latérale ici -->
        </VBox>
    </center>

    <bottom>
        <VBox id="footer" fx:id="musicPlayerRoot" prefWidth="663" style="-fx-background-color: #333;">
        </VBox>
    </bottom>


</BorderPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane  prefHeight="536.0" prefWidth="698.0" style="-fx-background-color: #1D1F3E;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="MusicPlayer.Controller.HomeController">

    <VBox prefHeight="536.0" prefWidth="698.0" spacing="5.0">
      <children>
         <Label prefHeight="38.0" prefWidth="109.0" text="New Songs" textFill="WHITE">
            <font>
               <Font name="Open Sans Bold" size="20.0" />
            </font>
            <opaqueInsets>
               <Insets />
            </opaqueInsets>
            <VBox.margin>
               <Insets left="25.0" top="5.0" />
            </VBox.margin>
         </Label>
         <!-- ScrollPane to contain music cards -->
         <ScrollPane fitToWidth="true" prefHeight="490.0" prefWidth="698.0" style="-fx-background-color:  #111536;">
            <content>
               <FlowPane fx:id="songList" hgap="10" prefHeight="494.0" prefWidth="683.0" style="-fx-background-color:  #111536;" vgap="10">
                  <padding>
                     <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
                  </padding>
               </FlowPane>
            </content>
            <VBox.margin>
               <Insets />
            </VBox.margin>
         </ScrollPane>
      </children></VBox>

</AnchorPane>

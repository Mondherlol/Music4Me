   <VBox alignment="BOTTOM_CENTER" prefHeight="519.0" prefWidth="698.0">
      <children>
         <HBox alignment="CENTER" prefHeight="150.0" prefWidth="486.0">
            <children>
               <ImageView fx:id="coverImage" fitHeight="150.0" fitWidth="376.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                     <Image url="@../assets/images/album2.jpg" />
                  </image>
               </ImageView>
               <VBox prefHeight="38.0" prefWidth="288.0">
                  <children>
                      <Label prefHeight="15.0" prefWidth="286.0" text="Votre playlist" textFill="WHITE">
                          <font>
                              <Font name="Open Sans Regular" size="12.0" />
                          </font>
                      </Label>
                     <Label fx:id="playlistName" prefHeight="48.0" prefWidth="286.0" text="Nom Playlist" textFill="WHITE">
                        <font>
                           <Font name="Open Sans Bold" size="40.0" />
                        </font>
                     </Label>
                     <HBox prefHeight="100.0" prefWidth="200.0">
                        <children>
                           <Button fx:id="updateButton" mnemonicParsing="false" style="-fx-background-color: #00ff44;" text="Edit infos">
                              <font>
                                 <Font name="Open Sans Bold" size="17.0" />
                              </font>
                           </Button>
                           <Button fx:id="deleteButton" mnemonicParsing="false" style="-fx-background-color: #fc1e1e;" text="Delete" textFill="WHITE">
                              <font>
                                 <Font name="Open Sans Bold" size="17.0" />
                              </font>
                              <HBox.margin>
                                 <Insets left="10.0" />
                              </HBox.margin>
                           </Button>
                        </children>
                        <opaqueInsets>
                           <Insets top="20.0" />
                        </opaqueInsets>
                     </HBox>
                  </children>
                  <padding>
                     <Insets left="15.0" top="10.0" />
                  </padding>
               </VBox>
            </children>
         </HBox>
         <Text fx:id="description" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Description : Ceci est une description de cette playlist." wrappingWidth="427.71366596221924">
            <VBox.margin>
               <Insets top="10.0" />
            </VBox.margin>
         </Text>
          <!-- ScrollPane to contain music cards -->
          <ScrollPane fitToWidth="true" prefWidth="698.0" style="-fx-background-color: #1D1F3E;">
              <content>
                  <FlowPane fx:id="songList" hgap="10" prefHeight="264.0" prefWidth="697.0" style="-fx-background-color: #1D1F3E;" vgap="10">
                  <padding>
                     <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
                  </padding></FlowPane>
              </content>
            <VBox.margin>
               <Insets top="15.0" />
            </VBox.margin>
          </ScrollPane>
      </children>
   </VBox>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="522.0" prefWidth="205.0" style="-fx-background-color: #111536;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="MusicPlayer.Controller.SideBarController">

    <!-- Logo et nom d'utilisateur -->
    <VBox prefWidth="200" spacing="10" style="-fx-background-color: #111536;">
        <HBox alignment="CENTER" style="-fx-background-color: #111536;">
            <ImageView fitHeight="65.0" fitWidth="65.0">
                <Image url="@../assets/images/logo-2.png" />
            <HBox.margin>
               <Insets top="10.0" />
            </HBox.margin>
            </ImageView>
        </HBox>
        <HBox alignment="CENTER" style="-fx-background-color: #111536;">
            <Label text="Music4Me" textFill="WHITE">
            <font>
               <Font name="Open Sans Regular" size="15.0" />
            </font>
            <padding>
               <Insets top="-14.0" />
            </padding></Label>
        </HBox>

        <!-- Boutons de playlists -->
        <VBox spacing="5" style="-fx-background-color: #111536;">
            <Button fx:id="homeButton" alignment="TOP_LEFT" prefHeight="38.0" prefWidth="207.0" style="-fx-background-color: #1D1F3E;" text="    Home" textFill="WHITE">
                <graphic>
                    <ImageView fitHeight="29.0" fitWidth="33.0" preserveRatio="true">
                        <image>
                            <Image url="@../assets/images/home.png" />
                        </image>
                    </ImageView>
                </graphic>
            <font>
               <Font name="Open Sans Regular" size="15.0" />
            </font>
            </Button>
            <Button fx:id="favoritesButton" alignment="TOP_LEFT" prefHeight="31.0" prefWidth="200.0" style="-fx-background-color: #1D1F3E;" text="    Mes Favoris" textFill="WHITE">
                <graphic>
                    <ImageView fitHeight="30.0" fitWidth="30.0" preserveRatio="true">
                        <image>
                            <Image url="@../assets/images/like.png" />
                        </image>
                    </ImageView>
                </graphic>
            <font>
               <Font name="Open Sans Regular" size="15.0" />
            </font>
            </Button>

        </VBox>
    </VBox>
      <Button fx:id="addSongButton" alignment="TOP_LEFT" layoutX="11.0" layoutY="420.0" prefHeight="39.0" prefWidth="178.0" style="-fx-background-color: #1D1F3E;" text=" Import new song" textFill="WHITE">
          <graphic>
              <ImageView fitHeight="29.0" fitWidth="25.0" preserveRatio="true">
                  <image>
                      <Image url="@../assets/images/plus_pink.png" />
                  </image>
              </ImageView>
          </graphic>
      <font>
         <Font name="Open Sans Regular" size="15.0" />
      </font>
      </Button>
   <ScrollPane hbarPolicy="NEVER" layoutY="195.0" prefHeight="209.0" prefWidth="200.0" style="-fx-background-color: #111536;" vbarPolicy="ALWAYS">
      <content>
         <VBox fx:id="playlistsVBox" prefHeight="218.0" prefWidth="207.0" style="-fx-background-color: #111536;" />
      </content>
   </ScrollPane>
   <Button fx:id="createPlaylistBtn" alignment="TOP_LEFT" layoutX="11.0" layoutY="468.0" prefHeight="39.0" prefWidth="178.0" style="-fx-background-color: #1D1F3E;" text="Create Playlist" textFill="WHITE">
      <graphic>
         <ImageView fitHeight="29.0" fitWidth="25.0" preserveRatio="true">
            <image>
               <Image url="@../assets/images/plus_pink.png" />
            </image>
         </ImageView>
      </graphic>
      <font>
         <Font name="Open Sans Regular" size="15.0" />
      </font>
   </Button>

</AnchorPane>
